<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'users/user_info', user: @user %>
    </section>
    <section>
      <%= render 'users/user_follower_stats' %>
    </section>
  </aside>

  <div class="span8">
    <%= render 'users/forms/follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
          <%= will_paginate @microposts %>
      <% end %>
  </div>
</div>